    "@stacks/stacking": "^7.2.0",
    "@stacks/transactions": "^7.1.0",
    "@vitest/expect": "^3.0.8",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@clarigen/core": "^3.0.0",
